.v-image
    &__wrap
        align-itemsL center
        display: flex
        justify-content: center
        position: fixed
        height: 100vh
        width: 100vw
        top: 0

        &::before
            background: rgba(158,92,184,.6)
            content: ''
            position: absolute
            height: 100vh
            width: 100vw
        
        ~ .theme--dark.v-toolbar
            background-color: transparent

            &::after
                display: none

        ~ .v-content > .v-content__wrap
            background-color: transparent