.v-pagesearch
    position: absolute
    align-items: center
    background-color: $blue-grey.lighten-5
    display: flex
    height: 72px
    padding: 12px 16px 12px
    top: 0px
    width: 100%

    &__text
        border-radius: 3px
        height: 48px
        color: $blue-grey.base
        font-size: 28px
        font-weight: 300
        outline: none
        padding: 0 8px
        width: 100%

        &--focus
            background: rgba(255, 255, 255, 0.6)
